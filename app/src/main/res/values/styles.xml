<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    style for shapebleImageView to mak image with rounded corners-->
    <style name="styleRoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>
    <!--    style for shapebleImageView to make image it circular -->
    <style name="styleCircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
<!--    theme for transparent background of dialog-->
    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>